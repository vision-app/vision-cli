#!/usr/bin/env node

require('../lib/checkVersions')();
const pkg = require('../package.json');

/**
 * Parse Commands
 */
const program = require('commander');
program
    .usage('<task> [options]')
    .version(pkg.version)
    .command('init <project-type> <project-name>', 'Initialize a project')
    .command('dev', 'Run Developing Server')
    .command('build', 'Build a distribution')
    .command('ghpages', 'Publish a directory to gh-pages')
    .command('publish <version>', 'Publish new version')
    .command('test', 'test a project')
    .parse(process.argv);
