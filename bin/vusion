#!/usr/bin/env node

'use strict';

require('../src/checkVersions')();
const pkg = require('../package.json');
const shell = require('shelljs');

/**
 * Parse Commands
 */
const program = require('commander');
program
    .usage('<type> <task> [options]')
    .version(pkg.version)
    .option('-p, --port <port>', 'Webpack dev server port in dev mode', parseInt)
    .option('-C, --no-clean', 'Disable clean and copy')
    .option('-H, --no-hot', 'Disable hot reload')
    .option('-s, --source-map', 'Generate source map in build mode')
    .option('--extract-css', 'Extract CSS by ExtractTextPlugin in build mode')
    .option('--uglify-js', 'Compress and mangle JS by UglifyJSPlugin in build mode')
    .command('publish <directory>', 'Publish a directory to gh-pages')
    .parse(process.argv);

/**
 * Check Type
 */
const type = program.args[0];
if (type === 'publish')
    return;
else if (type === 'app')
    global.vusionConfig = require('../src/getVusionConfig');
else if (type === 'ui') {
    global.vusionConfig = Object.assign({
        assetsPath: './src/assets',
        docsPath: './docs',
    }, require('../src/getVusionConfig'));
} else
    throw new Error('Unknown type!');

global.vusionConfig = Object.assign({
    extractCSS: program.extractCss,
    uglifyJS: program.uglifyJs,
    webpack: {},
    webpackDevServer: {},
}, global.vusionConfig);

if (program.port)
    global.vusionConfig.webpackDevServer.port = program.port;

/**
 * Run Task
 */
const task = program.args[1];
if (task === 'init') {
    const projectName = program.args[2] || 'my-project';
    const folder = type + '-simple';

    const URL = 'https://github.com/vusion/vusion-samples.git';
    shell.exec(`git clone -b master --depth 1 ${URL}`);
    shell.mv('vusion-samples/' + folder, './' + projectName);
    shell.rm('-rf', 'vusion-samples');

    console.info(`Initialized "${projectName}".`);
} else if (task === 'dev')
    process.env.NODE_ENV = 'development';
else if (task === 'build')
    process.env.NODE_ENV = 'production';
else
    throw new Error('Unknown task!');

if (task === 'dev' || task === 'build')
    require('../src/' + task)(require('../config/' + type));
