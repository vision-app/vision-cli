#!/usr/bin/env node

'use strict';

require('../src/checkVersions')();
const pkg = require('../package.json');

/**
 * Parse Commands
 */
const program = require('commander');
program
    .usage('<type> <task> [options]')
    .version(pkg.version)
    .option('-p, --port <port>', 'Web Server Port', parseInt)
    .option('-H, --no-hot', 'Disable hot reload')
    .command('publish <directory>', 'Publish a directory to gh-pages')
    .parse(process.argv);

/**
 * Check Type
 */
const type = program.args[0];
if (type === 'publish')
    return;
else if (type === 'app')
    global.vusionConfig = require('../src/getVusionConfig');
else if (type === 'ui') {
    global.vusionConfig = Object.assign({
        assetsPath: './src/assets',
        docsPath: './docs',
    }, require('../src/getVusionConfig'));
} else
    throw new Error('Unknown type!');

global.vusionConfig = Object.assign({
    webpack: {},
    webpackDevServer: {},
}, global.vusionConfig);

if (program.port)
    global.vusionConfig.webpackDevServer.port = program.port;

/**
 * Run Task
 */
const task = program.args[1];
if (task === 'init'){
    const execSync = require('child_process').execSync;
    var repo = program.args[2];
    if(!repo)
        repo = type === 'app' ? 'vusion-app-sample' : 'vusion-ui-sample';
    var needlessRepo = type === 'app' ? 'ui-simple' : 'app-simple';
    const URL = type === 'app'
        ?'https://github.com/vusion/vusion-samples.git'
            :'https://github.com/vusion/vusion-samples.git';
    console.log(execSync([
        `git clone -b master --depth 1 ${URL} ${repo}`,
        `cd ${repo}`,
        `rm -rf .git`,
        `rm -rf ${needlessRepo}`,
        `git init`,
    ].join('&&')) + '');
    process.chdir(repo);

}
else if (task === 'dev')
    process.env.NODE_ENV = 'development';
else if (task === 'build')
    process.env.NODE_ENV = 'production';
else
    throw new Error('Unkown task!');

task !== 'init' && require('../src/' + task)(require('../config/' + type));
